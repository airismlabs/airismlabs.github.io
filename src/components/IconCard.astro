---
import OpenAi from "~icons/simple-icons/openai";
import Anthropic from "~icons/simple-icons/anthropic";
import Claude from "~icons/simple-icons/claude";
import Gemini from "~icons/simple-icons/googlegemini";
import Grok from "~icons/simple-icons/x";

type IconType = "openai" | "anthropic" | "claude" | "gemini" | "grok";

interface Props {
    icon?: IconType;
    title: string;
}

const { icon, title } = Astro.props;

const iconComponents = {
    openai: OpenAi,
    anthropic: Anthropic,
    claude: Claude,
    gemini: Gemini,
    grok: Grok,
};

const IconComponent = icon ? iconComponents[icon] : null;
---

<article class="card sl-flex">
    <p class="title sl-flex">
        {IconComponent && <IconComponent class="icon" />}
        <span set:html={title} />
    </p>
</article>

<style>
    @layer starlight.components {
        .card {
            --sl-card-border: var(--sl-color-purple);
            --sl-card-bg: var(--sl-color-purple-low);
            border: 1px solid var(--sl-color-gray-5);
            background-color: var(--sl-color-black);
            padding: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
            flex-direction: column;
        }
        .card:nth-child(4n + 1) {
            --sl-card-border: var(--sl-color-orange);
            --sl-card-bg: var(--sl-color-orange-low);
        }
        .card:nth-child(4n + 3) {
            --sl-card-border: var(--sl-color-green);
            --sl-card-bg: var(--sl-color-green-low);
        }
        .card:nth-child(4n + 4) {
            --sl-card-border: var(--sl-color-red);
            --sl-card-bg: var(--sl-color-red-low);
        }
        .card:nth-child(4n + 5) {
            --sl-card-border: var(--sl-color-blue);
            --sl-card-bg: var(--sl-color-blue-low);
        }
        .title {
            font-weight: 600;
            font-size: var(--sl-text-h5);
            color: var(--sl-color-white);
            line-height: var(--sl-line-height-headings);
            gap: 1rem;
            align-items: center;
        }
        .card .icon {
            border: 1px solid var(--sl-card-border);
            background-color: var(--sl-card-bg);
            padding: 0.2em;
            border-radius: 0.25rem;
            flex-shrink: 0;
            width: 2em;
            height: 2em;
        }
    }
</style>
